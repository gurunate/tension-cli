#!/usr/bin/env node

'use strict';

const request = require('request');
const chalk = require('chalk');
const ora = require('ora');

const spinner = ora('looking up templates');

/**
 * Padding.
 */

console.log();
process.on('exit', function () {
    console.log();
});

/**
 * List repos.
 */
spinner.start();
request({
    url: 'https://api.github.com/users/gurunate/repos',
    headers: {
        'User-Agent': 'tension-cli'
    }
}, (err, res, body) => {
    if (err) {
        throw(err);
    }

    spinner.stop();

    const data = JSON.parse(body);

    if (Array.isArray(data)) {
        console.log('Available templates:');
        console.log();

        data.filter(r => r.name.match(/tension-template-/)).forEach(repo => {
            console.log(` ${chalk.yellow('â˜…')} ${chalk.blue(repo.name.replace('tension-template-', ''))} - ${repo.description}`);
        });

    } else {
        console.error(data.message);
    }
});
